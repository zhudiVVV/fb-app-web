<view class="content"><view class="row b-b"><text class="tit">姓名</text><input class="input" type="text" placeholder="收货人姓名" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','name','$event',[]],['addressData']]]]]}}" value="{{addressData.name}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">手机号码</text><input class="input" type="number" placeholder="收货人手机号码" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','phoneNumber','$event',[]],['addressData']]]]]}}" value="{{addressData.phoneNumber}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">邮政编码</text><input class="input" type="number" placeholder="收货人邮政编码" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','postCode','$event',[]],['addressData']]]]]}}" value="{{addressData.postCode}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">所在区域</text><input class="input" type="text" placeholder="所在区域" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','prefixAddress','$event',[]],['addressData']]]]]}}" value="{{addressData.prefixAddress}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">详细地址</text><input class="input" type="text" placeholder="详细地址" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','detailAddress','$event',[]],['addressData']]]]]}}" value="{{addressData.detailAddress}}" bindinput="__e"/></view><view class="row default-row"><text class="tit">设为默认</text><switch checked="{{addressData.defaultStatus==1}}" color="#fa436a" data-event-opts="{{[['change',[['switchChange',['$event']]]]]}}" bindchange="__e"></switch></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">提交</button></view>